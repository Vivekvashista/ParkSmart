<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandOwnerHomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/warningColor"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/white"
        android:text="Your application is in review process, it may take 3 days to review. Visit again after verification!"
        android:textSize="8pt"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/register_button"
        android:layout_centerInParent="true"
        android:text="Logout"
        android:id="@+id/logout_btn_id"
        android:textColor="@color/white"/>
</RelativeLayout>