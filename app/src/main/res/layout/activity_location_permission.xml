<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:background="@drawable/custompopupborder"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="10dp"
    tools:context=".LocationPermissionActivity">

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/cross_btn_id"
        android:text="X"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:background="@drawable/ovalcross"
        android:textSize="10pt"
        android:gravity="center"
        android:layout_gravity="end"
        />
    <ImageView
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/otp_veri_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="GPS Turned Off"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="9pt"
        android:textColor="@android:color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Please, turn on gps to continue and click refresh button!"
        android:layout_marginTop="10dp"
        android:textSize="7pt"
        android:textAlignment="center"
        android:textColor="@android:color/white"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:textSize="9pt"
        android:textAllCaps="false"
        android:background="@drawable/register_button"
        android:textColor="@android:color/white"
        android:id="@+id/refresh_btn_id"
        android:layout_marginTop="50dp"
        />
</LinearLayout>