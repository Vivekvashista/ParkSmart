<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_up_form_for_user">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/Registration_Header_bar"
        android:background="@color/colorPrimary"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/cross_icon"
                android:layout_centerVertical="true"
                android:id="@+id/back_btn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:id="@+id/header"
                android:layout_marginLeft="15dp"
                android:text="ParkSmart"
                android:textSize="20sp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Registration_Header_bar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/Registration_header"
                android:background="@color/colorPrimary"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/register_icon"
                    android:id="@+id/Register_icon_image"
                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register with us"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/Register_icon_image"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="10pt"/>
            </RelativeLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/Registration_header">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Registration_header"
                    >
                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/form_1"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_file"
                            >
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/name_icon"
                                android:id="@+id/subform_1"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="15dp"
                                android:id="@+id/user_name_id"
                                android:layout_toRightOf="@+id/subform_1"
                                android:hint="Enter Your Name"
                                android:background="@android:color/transparent"
                                />

                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/form_2"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/form_1"
                        android:layout_centerHorizontal="true"
                        >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_file"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/mobile_no_icon"
                            android:id="@+id/subform_2"
                            />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="15dp"
                            android:inputType="number"
                            android:id="@+id/user_mob_id"
                            android:layout_toRightOf="@+id/subform_2"
                            android:hint="Enter Your Mobile no."
                            android:background="@android:color/transparent"
                            />
                    </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/form_3"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/form_2"
                        android:layout_centerHorizontal="true"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_file"
                            >
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/email_icon"
                                android:id="@+id/subform_3"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="15dp"
                                android:id="@+id/user_email_id"
                                android:layout_toRightOf="@+id/subform_3"
                                android:hint="Enter Your Email Id"
                                android:background="@android:color/transparent"
                                />

                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/form_4"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/form_3"
                        android:layout_centerHorizontal="true"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_file"
                            >
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/password_icon"
                                android:id="@+id/subform_4"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:inputType="textPassword"
                                android:id="@+id/user_password_id"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@+id/subform_4"
                                android:hint="Enter Your Password"
                                android:background="@android:color/transparent"
                                />

                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/form_5"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/form_4"
                        android:layout_centerHorizontal="true"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_file"
                            >
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/confirm_password_icon"
                                android:id="@+id/subform_6"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="15dp"
                                android:id="@+id/user_confirm_pass_id"
                                android:inputType="textPassword"
                                android:layout_toRightOf="@+id/subform_6"
                                android:hint="Confirm Password"
                                android:background="@android:color/transparent"
                                />
                        </RelativeLayout>
                    </RelativeLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/form_5"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="12dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/register_button"
                        android:textSize="8pt"
                        android:text="Sign up"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:id="@+id/user_submit"
                        />

                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>