<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/login_backgorund"
    tools:context=".login_form_for_both"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome to"
        android:textSize="10pt"
        android:id="@+id/login_head1"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="ParkSmart"
        android:layout_below="@+id/login_head1"
        android:textSize="15pt"
        android:id="@+id/login_head2"
        android:textColor="@color/white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_head2"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_outer_box"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="10pt"
                android:id="@+id/Login_inner_header"
                android:layout_centerHorizontal="true"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_inner_box"
                android:layout_below="@+id/Login_inner_header"
                android:layout_centerHorizontal="true">
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/first"
                    android:id="@+id/radio_group_id"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/first"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="9pt"
                        android:text="User"
                        />
                    <RadioButton
                        android:id="@+id/second"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="9pt"
                        android:layout_marginLeft="15dp"
                        android:text="Land Owner"/>
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/radio_group_id"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="20dp"
                    android:id="@+id/email_id_label"
                    android:text="Mobile Number"
                    android:textSize="6pt"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:inputType="number"
                    android:backgroundTint="@color/colorPrimary"
                    android:id="@+id/email_id_field"

                    android:layout_below="@+id/email_id_label"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email_id_field"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/password_label"
                    android:text="Password"
                    android:textSize="6pt"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_below="@+id/password_label"
                    android:inputType="textPassword"
                    android:id="@+id/pass_id_field"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pass_id_field"
                    android:id="@+id/forget_id"
                    >
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remember me"
                        android:textSize="6pt"
                        android:id="@+id/remember_id"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot your password?"
                        android:textSize="6pt"
                        android:id="@+id/forgot_password"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/forget_id"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_centerHorizontal="true">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/register_button"
                        android:text="Login"
                        android:textSize="9pt"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:id="@+id/login_submit_button"
                        />

                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/error_msg_id"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                android:text="Nothing selected, please select mode of login!"
                android:textColor="@android:color/holo_red_dark"
                android:layout_below="@+id/login_inner_box"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_outer_box"
            android:id="@+id/signup_trace_header_id"
            android:text="------------- New to ParkSmart? -------------"
            android:textAlignment="center"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_trace_header_id"
            android:background="@drawable/register_button"
            android:layout_marginTop="20dp"
            android:id="@+id/create_Account_id"
            android:text="Create your Account"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/redirect_to_landowner_id"
            android:text="Do you want to register your land for parking?"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/create_Account_id"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
